{
    "name": "vainyl/database",
    "type": "shared-package",
    "authors": [
        {
            "name": "Taras Girnyk",
            "email": "taras.p.gyrnik@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Vainyl\\Database\\": "src/"
        }
    },
    "require": {
        "php": ">=7.1",
        "vainyl/core": "dev-master",
        "vainyl/connection": "dev-master",
        "vainyl/operation": "dev-master"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://satis.vainyl.com:444"
        }
    ],
    "suggest" : {
        "vainyl/redis" : "Driver-agnostic redis classes",
        "vainyl/pdo" : "Pdo adapters to work with database classes",
        "vainyl/mongo-bridge" : "Mongo and MongoDB driver adapters"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}