{
    "name": "vainyl/database",
    "type": "shared-package",
    "authors": [
        {
            "name": "Taras Girnyk",
            "email": "taras.p.gyrnik@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Vainyl\\Database\\": "src/"
        }
    },
    "require": {
        "php": ">=7.1",
        "vainyl/core": "0.2.x-dev",
        "vainyl/connection": "0.2.x-dev",
        "vainyl/operation": "0.2.x-dev"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://satis.vainyl.com:444"
        }
    ],
    "suggest" : {
        "vainyl/credis-bridge" : "CRedis native extension adapter",
        "vainyl/pdo" : "Pdo adapters to work with database classes",
        "vainyl/mongo" : "Mongo and MongoDB driver adapters"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}